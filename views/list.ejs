<%- include("header") -%>

  <div class="box" id="heading">
    <h1>
      <%= ejsListTitle %>
    </h1>
  </div>

  <div class="box">
    <% for (let i=0; i<newListItems.length; i++) { %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkboxOn" value="<%= dbItemsIDs[i] %>" onChange="this.form.submit()">
          <p>
            <%= newListItems[i] %>
          </p>
          
          <input type="hidden" name="deletedListTitle" value="<%= ejsListTitle %>">
          <input type="hidden" name="deletedListIndex" value="<%= i %>">
        </div>
      </form>
      <% } %>

        <form class="item form-item" action="/" method="post">
          <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
          <button type="submit" name="plusButton" value="<%= ejsListTitle %>">+</button>
        </form>
  </div>

  <%- include("footer") -%>